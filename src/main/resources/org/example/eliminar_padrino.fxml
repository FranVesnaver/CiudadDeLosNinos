<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.EliminarPadrinoController"
      stylesheets="@styles.css"
      minHeight="520" minWidth="400" spacing="10" alignment="CENTER" style="-fx-padding: 30;">

    <Label text="Ingrese el DNI del padrino a eliminar:"/>
    <TextField fx:id="campoDni" promptText="DNI"/>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Cancelar" onAction="#volver"/>
        <Button text="Eliminar padrino" onAction="#eliminarPadrino"/>
    </HBox>
    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
</VBox>
